<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AzureStaticWeb"
             x:Class="AzureStaticWeb.MainPage">

    <Grid>
        <Image Source="Background.png" Aspect="AspectFill" />
        <StackLayout VerticalOptions="Center" BackgroundColor="#AA000000" Padding="16">
            <!-- Place new controls here -->
            <Label Text="{Binding Quote}" HorizontalTextAlignment="Center" FontSize="Large" 
           HorizontalOptions="Center" TextColor="White" />
            <Label Text="{Binding Author}" 
           HorizontalOptions="Center" FontSize="Small" 
                   HorizontalTextAlignment="Center" TextColor="White" />
            <Button Text="Next Quote" Command="{Binding NextQuoteCommand}" BackgroundColor="White" TextColor="Black"
           HorizontalOptions="Center"/>
        </StackLayout>
        <BoxView BackgroundColor="#AA000000" IsVisible="{Binding IsBusy}" />
        <ActivityIndicator HeightRequest="80" WidthRequest="80" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
    </Grid>

</ContentPage>
